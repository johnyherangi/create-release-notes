    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand"],
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Test (current file)",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["${fileBasename}", "--runInBand"],
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
        }
    ]
}
